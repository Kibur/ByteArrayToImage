<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:BA_ByteArrayToImage.Properties" x:Class="BA_ByteArrayToImage.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" x:Name="txtInput" TextWrapping="Wrap" Margin="10"/>
        <Image Grid.Row="0" Grid.Column="1" Margin="10" x:Name="imgOutput" Stretch="Uniform">
        </Image>
        <Button Grid.Row="1" Grid.Column="1" Width="80" Height="30" Content="Convert" HorizontalAlignment="Right" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
